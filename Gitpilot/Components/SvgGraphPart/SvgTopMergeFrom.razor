<path d="M @_positionX 13 C @_cX1 @_cY1, @_cX2 @_cY2, @_fromPositionX 26" stroke="@FromRgbColor" fill="transparent" stroke-width="2"/>
<circle cx="@_positionX" cy="13" r="5" fill="@RgbColor"></circle>
<line x1="@_positionX" x2="@_positionX" y1="13" y2="26" stroke="@RgbColor" stroke-width="2"></line>

@code {
    [Parameter]
    public int LineIndex { get; set; } = 1;
    [Parameter]
    public string RgbColor { get; set; } = "rgb(0, 120, 150)";

    [Parameter]
    public int FromLineIndex { get; set; } = 2;
    [Parameter]
    public string FromRgbColor { get; set; } = "rgb(0, 120, 150)";

    private float _positionX => LineIndex * 10 * 2;

    private float _fromPositionX => FromLineIndex * 10 * 2;

    private float _cX1 => ((_fromPositionX - _positionX) / 2) + _positionX;
    private float _cY1 => 13;

    private float _cX2 => _fromPositionX;
    private float _cY2 => 26 / 2;
}
